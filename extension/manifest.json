{
  "manifest_version": 3,
  "name": "Boot.dev Content Extractor",
  "version": "1.2.0",
  "description": "Extract challenges and lessons from Boot.dev and send to Notion",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.boot.dev/*",
    "https://api.notion.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.boot.dev/challenges/*",
        "https://www.boot.dev/lessons/*"
      ],
      "js": [
        "browser-polyfill.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "bootdev-extractor@example.com",
      "strict_min_version": "109.0"
    }
  }
}